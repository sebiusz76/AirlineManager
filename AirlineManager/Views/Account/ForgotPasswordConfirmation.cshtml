@{
	ViewData["Title"] = "Password Reset Email Sent";
}

@section Styles {
	<link rel="stylesheet" href="~/css/views/Account/ForgotPasswordConfirmation.css" asp-append-version="true" />
}

<div class="row justify-content-center mt-5">
	<div class="col-md-6">
		<div class="card shadow">
			<div class="card-body text-center">
				<div class="mb-4">
					<i class="bi bi-envelope-check success-icon"></i>
				</div>

				<h1 class="card-title mb-3">Check Your Email</h1>

				<p class="lead">
					If an account with your email exists, we've sent a password reset link to your inbox.
				</p>

				<p class="text-muted">
					Please check your email and click the link to reset your password.
					The link will expire in 24 hours.
				</p>

				<hr />

				<div class="d-grid gap-2">
					<a asp-action="Login" class="btn btn-primary">
						<i class="bi bi-box-arrow-in-right"></i> Return to Login
					</a>
				</div>

				<div class="mt-3">
					<p class="text-muted small">
						<i class="bi bi-info-circle"></i> Didn't receive an email? Check your spam folder or
						<a asp-action="ForgotPassword">try again</a>.
					</p>
				</div>
			</div>
		</div>
	</div>
</div>