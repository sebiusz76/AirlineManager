@model AirlineManager.Models.ViewModel.RegisterViewModel

@{
	ViewData["Title"] = "Register";
}

@section Styles {
	<link rel="stylesheet" href="~/css/views/Account/Register.css" asp-append-version="true" />
}

<div class="auth-container">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-8">
				<!-- Register Card -->
				<div class="auth-card card border-0 shadow-lg">
					<!-- Header with gradient -->
					<div class="auth-header auth-header-gradient text-white text-center py-4">
						<div class="mb-3">
							<i class="bi bi-person-plus-fill auth-header-icon"></i>
						</div>
						<h2 class="fw-bold mb-2">Join Airline Manager</h2>
						<p class="mb-0 opacity-75">Create your account and start managing your virtual airline</p>
					</div>

					<div class="card-body p-4 p-md-5">
						<form asp-action="Register" method="post">
							@Html.AntiForgeryToken()

							@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
							{
								<div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
							}

							<!-- Name Row -->
							<div class="row g-3 mb-3">
								<div class="col-md-6">
									<div class="form-floating">
										<input asp-for="FirstName" class="form-control" placeholder="First Name" autofocus />
										<label asp-for="FirstName">
											<i class="bi bi-person me-2"></i>First Name
										</label>
										<span asp-validation-for="FirstName" class="text-danger small"></span>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-floating">
										<input asp-for="LastName" class="form-control" placeholder="Last Name" />
										<label asp-for="LastName">
											<i class="bi bi-person me-2"></i>Last Name
										</label>
										<span asp-validation-for="LastName" class="text-danger small"></span>
									</div>
								</div>
							</div>

							<!-- Email Input -->
							<div class="form-floating mb-3">
								<input asp-for="Email" class="form-control" placeholder="name@example.com" />
								<label asp-for="Email">
									<i class="bi bi-envelope me-2"></i>Email Address
								</label>
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>

							<!-- Password Input -->
							<div class="form-floating mb-3">
								<input asp-for="Password" class="form-control" placeholder="Password" />
								<label asp-for="Password">
									<i class="bi bi-lock me-2"></i>Password
								</label>
								<span asp-validation-for="Password" class="text-danger small"></span>
							</div>

							<!-- Confirm Password Input -->
							<div class="form-floating mb-4">
								<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
								<label asp-for="ConfirmPassword">
									<i class="bi bi-lock-fill me-2"></i>Confirm Password
								</label>
								<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
							</div>

							<!-- Password Requirements Info -->
							<div class="alert alert-info mb-4 border-0 password-requirements-box">
								<div class="d-flex align-items-start">
									<i class="bi bi-info-circle-fill me-2 mt-1 password-requirements-icon"></i>
									<div>
										<strong class="password-requirements-text">Password Requirements:</strong>
										<ul class="mb-0 mt-2 small password-requirements-text">
											<li>At least 8 characters long</li>
											<li>Contains at least one uppercase letter (A-Z)</li>
											<li>Contains at least one lowercase letter (a-z)</li>
											<li>Contains at least one number (0-9)</li>
										</ul>
									</div>
								</div>
							</div>

							<!-- Register Button -->
							<div class="d-grid gap-2 mb-4">
								<button type="submit" class="btn btn-lg text-white btn-gradient-primary">
									<i class="bi bi-rocket-takeoff me-2"></i>Create Account
								</button>
							</div>

							<!-- Divider -->
							<div class="position-relative mb-4">
								<hr class="text-muted" />
								<span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
									OR
								</span>
							</div>

							<!-- Links -->
							<div class="text-center">
								<p class="text-muted mb-0">
									Already have an account?
									<a asp-action="Login" class="text-decoration-none fw-bold">
										<i class="bi bi-box-arrow-in-right me-1"></i>Sign In
									</a>
								</p>
							</div>
						</form>
					</div>
				</div>

				<!-- Back to Home -->
				<div class="text-center mt-4">
					<a asp-controller="Home" asp-action="Index" class="text-decoration-none text-white opacity-75">
						<i class="bi bi-arrow-left me-1"></i>Back to Home
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}