@model AirlineManager.Models.ViewModel.ResendConfirmationViewModel

@{
	ViewData["Title"] = "Resend Confirmation Email";
}

<div class="row justify-content-center">
	<div class="col-md-6 col-lg-5">
		<div class="card shadow-sm mt-5">
			<div class="card-header bg-primary text-white text-center">
				<h4><i class="bi bi-envelope"></i> Resend Confirmation Email</h4>
			</div>
			<div class="card-body">
				<p class="text-muted">Enter your email address to receive a new confirmation link.</p>
				
				<form asp-action="ResendConfirmation" method="post">
					@Html.AntiForgeryToken()
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="mb-3">
						<label asp-for="Email" class="form-label"></label>
						<input asp-for="Email" class="form-control" placeholder="your-email@example.com" autocomplete="email" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary">
							<i class="bi bi-send"></i> Send Confirmation Email
						</button>
						<a asp-action="Login" class="btn btn-outline-secondary">
							<i class="bi bi-arrow-left"></i> Back to Login
						</a>
					</div>
				</form>

				<hr class="my-4">

				<div class="text-muted small">
					<p class="mb-1"><strong>Note:</strong></p>
					<ul class="mb-0">
						<li>Check your spam folder if you don't see the email</li>
						<li>The confirmation link will expire in 24 hours</li>
						<li>You can only resend if your email is not already confirmed</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
