@model AirlineManager.Models.ViewModel.LoginViewModel

@{
	ViewData["Title"] = "Sign In";
}

@section Styles {
	<link rel="stylesheet" href="~/css/views/Account/Login.css" asp-append-version="true" />
}

<div class="auth-container">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-5 col-md-7">
				<!-- Login Card -->
				<div class="auth-card card border-0 shadow-lg">
					<!-- Header with gradient -->
					<div class="auth-header auth-header-gradient text-white text-center py-4">
						<div class="mb-3">
							<i class="bi bi-airplane-engines auth-header-icon"></i>
						</div>
						<h2 class="fw-bold mb-2">Welcome Back</h2>
						<p class="mb-0 opacity-75">Sign in to Airline Manager</p>
					</div>

					<div class="card-body p-4 p-md-5">
						<form asp-action="Login" method="post">
							@Html.AntiForgeryToken()
							<div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

							<!-- Email Input -->
							<div class="form-floating mb-3">
								<input asp-for="Email" class="form-control form-control-lg" placeholder="name@example.com" autofocus />
								<label asp-for="Email">
									<i class="bi bi-envelope me-2"></i>Email Address
								</label>
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>

							<!-- Password Input -->
							<div class="form-floating mb-3">
								<input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
								<label asp-for="Password">
									<i class="bi bi-lock me-2"></i>Password
								</label>
								<span asp-validation-for="Password" class="text-danger small"></span>
							</div>

							<!-- Remember Me -->
							<div class="mb-4">
								<div class="form-check">
									<input asp-for="RememberMe" class="form-check-input" />
									<label asp-for="RememberMe" class="form-check-label">
										Keep me signed in
									</label>
								</div>
							</div>

							<!-- Sign In Button -->
							<div class="d-grid gap-2 mb-4">
								<button type="submit" class="btn btn-lg text-white btn-gradient-primary">
									<i class="bi bi-box-arrow-in-right me-2"></i>Sign In
								</button>
							</div>

							<!-- Divider -->
							<div class="position-relative mb-4">
								<hr class="text-muted" />
								<span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
									OR
								</span>
							</div>

							<!-- Links -->
							<div class="text-center">
								<a asp-action="ForgotPassword" class="text-decoration-none d-block mb-2">
									<i class="bi bi-key me-1"></i>Forgot your password?
								</a>
								<p class="text-muted mb-0">
									Don't have an account?
									<a asp-action="Register" class="text-decoration-none fw-bold">
										Register now <i class="bi bi-arrow-right"></i>
									</a>
								</p>
							</div>
						</form>
					</div>
				</div>

				<!-- Back to Home -->
				<div class="text-center mt-4">
					<a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
						<i class="bi bi-arrow-left me-1"></i>Back to Home
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}