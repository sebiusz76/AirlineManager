@model AirlineManager.Models.ViewModel.ForgotPasswordViewModel

@{
	ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center mt-5">
	<div class="col-md-6">
		<div class="card shadow">
			<div class="card-body">
				<h1 class="card-title text-center mb-3">
					<i class="bi bi-key"></i> Forgot Password
				</h1>
				<p class="text-muted text-center">
					Enter your email address and we'll send you a link to reset your password.
				</p>
				<hr />

				<form asp-action="ForgotPassword" method="post">
					@Html.AntiForgeryToken()
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<div class="form-floating mb-3">
						<input asp-for="Email" class="form-control" placeholder="name@example.com" autofocus />
						<label asp-for="Email"></label>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary">
							<i class="bi bi-envelope"></i> Send Reset Link
						</button>
					</div>
				</form>

				<hr />

				<div class="text-center">
					<p class="mb-2">
						<a asp-action="Login" class="text-decoration-none">
							<i class="bi bi-arrow-left"></i> Back to Login
						</a>
					</p>
					<p class="mb-0">
						<a asp-action="Register" class="text-decoration-none">
							<i class="bi bi-person-plus"></i> Create a new account
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}