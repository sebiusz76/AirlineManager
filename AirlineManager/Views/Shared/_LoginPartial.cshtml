@using AirlineManager.Models.Domain
@using Microsoft.AspNetCore.Identity
@using AirlineManager.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
	@if (SignInManager.IsSignedIn(User))
	{
		var appUser = await UserManager.GetUserAsync(User);
		var displayName = appUser != null ? $"{appUser.FirstName} {appUser.LastName}" : User.Identity?.Name;
		var initials = appUser != null ? $"{appUser.FirstName[0]}{appUser.LastName[0]}" : "U";

		<li class="nav-item dropdown">
			<a class="nav-link text-white dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				<div class="user-avatar me-2">
					@initials
				</div>
				<span class="d-none d-md-inline">@displayName</span>
			</a>
			<ul class="dropdown-menu dropdown-menu-end dropdown-menu-custom shadow-lg border-0">
				<li class="dropdown-header">
					<div class="text-center py-2">
						<div class="user-avatar-large mx-auto mb-2">
							@initials
						</div>
						<div class="fw-bold">@displayName</div>
						<small class="text-muted">@appUser?.Email</small>
					</div>
				</li>
				<li><hr class="dropdown-divider"></li>
				<li>
					<a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
						<i class="bi bi-person me-2 text-primary"></i>My Profile
					</a>
				</li>
				<li>
					<a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ActiveSessions">
						<i class="bi bi-display me-2 text-success"></i>Active Sessions
					</a>
				</li>
				<li>
					<a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="LoginHistory">
						<i class="bi bi-clock-history me-2 text-info"></i>Login History
					</a>
				</li>
				<li><hr class="dropdown-divider"></li>

				<!-- Theme Selection Section -->
				<li class="dropdown-header d-flex justify-content-between align-items-center">
					<small class="text-muted"><i class="bi bi-palette me-1"></i>APPEARANCE</small>
					<span class="badge bg-primary theme-badge-small" id="currentThemeBadge"
						  data-bs-toggle="tooltip" data-bs-placement="left" title="Current theme">
						Auto
					</span>
				</li>
				<li class="px-3 py-2">
					<select class="form-select form-select-sm" id="themeSelect" aria-label="Select theme">
						<optgroup label="System">
							<option value="auto" data-icon="bi-circle-half">🔄 Auto (System)</option>
						</optgroup>
						<optgroup label="Light Themes">
							<option value="light" data-icon="bi-sun">☀️ Light (Soft)</option>
							<option value="light-crisp" data-icon="bi-sun-fill">🌞 Light (Crisp)</option>
							<option value="light-warm" data-icon="bi-brightness-high">🌅 Light (Warm)</option>
						</optgroup>
						<optgroup label="Dark Themes">
							<option value="dark" data-icon="bi-moon">🌙 Dark (Soft)</option>
							<option value="dark-slate" data-icon="bi-moon-stars">🌟 Dark (Slate)</option>
							<option value="dark-midnight" data-icon="bi-moon-fill">🌚 Dark (Midnight)</option>
						</optgroup>
					</select>
					<small class="text-muted d-block mt-1" id="themeDescription">
						<i class="bi bi-info-circle"></i> <span id="themeDescriptionText">Choose your preferred theme</span>
					</small>
				</li>
				<li class="px-3 pb-2">
					<a class="btn btn-sm btn-outline-primary w-100" asp-area="" asp-controller="Theme" asp-action="Variants">
						<i class="bi bi-palette me-1"></i>Compare All Themes
					</a>
				</li>

				<li><hr class="dropdown-divider"></li>
				<li>
					<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
						<button type="submit" class="dropdown-item text-danger">
							<i class="bi bi-box-arrow-right me-2"></i>Sign Out
						</button>
					</form>
				</li>
			</ul>
		</li>
	}
	else
	{
		<li class="nav-item me-2">
			<a class="nav-link text-white btn-nav-register" asp-area="" asp-controller="Account" asp-action="Register">
				Register
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-white btn-nav-login" asp-area="" asp-controller="Account" asp-action="Login">
				Sign In
			</a>
		</li>
	}
</ul>