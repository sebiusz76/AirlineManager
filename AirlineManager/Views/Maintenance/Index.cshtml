@{
	ViewData["Title"] = "Maintenance Mode";
	Layout = null; // No layout for maintenance page
	var message = ViewBag.MaintenanceMessage as string;
	var estimatedEnd = ViewBag.EstimatedEnd as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AirlineManager</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	<style>
		body {
			margin: 0;
			padding: 0;
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		}

		.maintenance-container {
			max-width: 600px;
			width: 90%;
			padding: 40px;
			background: white;
			border-radius: 20px;
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
			text-align: center;
			animation: fadeIn 0.5s ease-in;
		}

		@@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-20px);
			}

			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.maintenance-icon {
			font-size: 6rem;
			color: #667eea;
			margin-bottom: 20px;
			animation: bounce 2s infinite;
		}

		@@keyframes bounce {
			0%, 100% {
				transform: translateY(0);
			}

			50% {
				transform: translateY(-20px);
			}
		}

		.maintenance-title {
			font-size: 2.5rem;
			font-weight: 700;
			color: #2d3748;
			margin-bottom: 20px;
		}

		.maintenance-message {
			font-size: 1.1rem;
			color: #4a5568;
			line-height: 1.6;
			margin-bottom: 30px;
		}

		.estimated-time {
			background: #f7fafc;
			padding: 20px;
			border-radius: 10px;
			margin-bottom: 30px;
			border-left: 4px solid #667eea;
		}

		.estimated-time-label {
			font-weight: 600;
			color: #2d3748;
			margin-bottom: 5px;
		}

		.estimated-time-value {
			font-size: 1.2rem;
			color: #667eea;
			font-weight: 700;
		}

		.status-badge {
			display: inline-block;
			padding: 8px 20px;
			background: #fed7d7;
			color: #c53030;
			border-radius: 50px;
			font-weight: 600;
			font-size: 0.9rem;
			margin-bottom: 20px;
		}

		.refresh-button {
			margin-top: 20px;
		}

		.feature-list {
			text-align: left;
			margin-top: 30px;
			padding-top: 30px;
			border-top: 1px solid #e2e8f0;
		}

		.feature-item {
			display: flex;
			align-items: center;
			margin-bottom: 15px;
			color: #4a5568;
		}

		.feature-icon {
			color: #667eea;
			font-size: 1.5rem;
			margin-right: 15px;
		}

		.social-links {
			margin-top: 30px;
		}

		.social-link {
			display: inline-block;
			margin: 0 10px;
			color: #667eea;
			font-size: 1.5rem;
			transition: color 0.3s;
		}

			.social-link:hover {
				color: #764ba2;
			}

		@@media (max-width: 768px) {
			.maintenance-title {
				font-size: 2rem;
			}

			.maintenance-icon {
				font-size: 4rem;
			}
		}
	</style>
</head>
<body>
	<div class="maintenance-container">
		<!-- Status Badge -->
		<div class="status-badge">
			<i class="bi bi-exclamation-triangle-fill"></i> MAINTENANCE MODE
		</div>

		<!-- Icon -->
		<div class="maintenance-icon">
			<i class="bi bi-tools"></i>
		</div>

		<!-- Title -->
		<h1 class="maintenance-title">
			We'll Be Right Back
		</h1>

		<!-- Message -->
		<p class="maintenance-message">
			@message
		</p>

		<!-- Estimated End Time -->
		@if (!string.IsNullOrEmpty(estimatedEnd))
		{
			<div class="estimated-time">
				<div class="estimated-time-label">
					<i class="bi bi-clock"></i> Estimated Completion Time
				</div>
				<div class="estimated-time-value">
					@estimatedEnd
				</div>
			</div>
		}

		<!-- Refresh Button -->
		<button onclick="location.reload()" class="btn btn-primary btn-lg refresh-button">
			<i class="bi bi-arrow-clockwise"></i> Refresh Page
		</button>

		<!-- Features -->
		<div class="feature-list">
			<div class="feature-item">
				<div class="feature-icon">
					<i class="bi bi-shield-check"></i>
				</div>
				<div>
					<strong>Your data is safe</strong><br />
					<small>All your information remains secure during maintenance</small>
				</div>
			</div>
			<div class="feature-item">
				<div class="feature-icon">
					<i class="bi bi-arrow-repeat"></i>
				</div>
				<div>
					<strong>Automatic updates</strong><br />
					<small>The page will automatically check for completion</small>
				</div>
			</div>
			<div class="feature-item">
				<div class="feature-icon">
					<i class="bi bi-lightning-charge"></i>
				</div>
				<div>
					<strong>Improved performance</strong><br />
					<small>We're making the system faster and more reliable</small>
				</div>
			</div>
		</div>

		<!-- Social Links (optional) -->
		<div class="social-links">
			<a href="#" class="social-link" title="Twitter">
				<i class="bi bi-twitter"></i>
			</a>
			<a href="#" class="social-link" title="Facebook">
				<i class="bi bi-facebook"></i>
			</a>
			<a href="#" class="social-link" title="Discord">
				<i class="bi bi-discord"></i>
			</a>
			<a href="mailto:support@airlinemanager.com" class="social-link" title="Email">
				<i class="bi bi-envelope"></i>
			</a>
		</div>

		<!-- Footer -->
		<div style="margin-top: 30px; color: #718096; font-size: 0.9rem;">
			&copy; @DateTime.Now.Year AirlineManager. All rights reserved.
		</div>
	</div>

	<script>
			 // Auto-refresh every 60 seconds to check if maintenance is complete
			 setTimeout(function() {
		   location.reload();
			 }, 60000); // 60 seconds

		   // Visual countdown
			 let secondsLeft = 60;
		   const refreshBtn = document.querySelector('.refresh-button');

		  setInterval(function() {
				 secondsLeft--;
			if (secondsLeft <= 0) {
		secondsLeft = 60;
				 }
		}, 1000);
	</script>
</body>
</html>
